@model LoginView
@{
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign in";
}
<div class="row">
    <div class="col-sm-4 "></div>
</div>
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
        {
        <fieldset>
            <legend>Sign in</legend>
            <div class="form-group @Html.HasErrorClass("Email", "has-error")">
                <label class="col-sm-4 control-label" for="Email">
                    Логін
                </label>
                <div class="col-sm-4">
                    @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                </div>
                <div class="col-sm-4">
                    <span class="help-block">Введіть логін</span>
                </div>
            </div>
            <div class="form-group  @Html.HasErrorClass("Password", "has-error")">
                <label class="col-sm-4 control-label" for="Password">
                    Пароль
                </label>
                <div class="col-sm-4">
                    @Html.Password("Password", Model.Password, new { @class = "form-control" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessage("Password")
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    @Html.ActionLink("Забули пароль?", "ForgotPassword", "Login")
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary">
                        Увійти
                    </button>
                </div>
            </div>
        </fieldset>
    }
    </div>
</div>
