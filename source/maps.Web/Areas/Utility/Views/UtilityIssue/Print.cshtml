@model UtilityIssue
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <title>Окреме доручення</title>
</head>
<body>
    <div class="container">

        <h2 class="text-center">Окреме доручення №____</h2>
        <div class="row">
            <div class="col-sm-6">
                <p>
                    <em>
                        Кому :<strong> @Model.UtilityDepartment.Name</strong>
                    </em>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <p>
                    <span class="glyphicon glyphicon-user"></span> @Model.User.FullName
                </p>
                <p>
                    <span class="glyphicon glyphicon-time"></span> Додано : <em>@Model.AddedDate.ToString("dd.MM.yyyy HH:mm")</em>
                </p>
                @if (Model.AcceptedDate.HasValue)
                {
                    <p>
                        <span class="glyphicon glyphicon-time"></span> Прийнято : <em>@Model.AcceptedDate.Value.ToString("dd.MM.yyyy HH:mm")</em>
                    </p>
                }
                @if (Model.ResolvedDate.HasValue)
                {
                    <p>
                        <span class="glyphicon glyphicon-time"></span> Вирішено : <em>@Model.ResolvedDate.Value.ToString("dd.MM.yyyy HH:mm")</em>
                    </p>
                }
                @if (Model.SubTags.Any())
                {
                    <p>
                        @foreach (var tag in Model.SubTags)
                        {
                            <div class="badge @tag.Color">@tag.Name</div>
                        }
                    </p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Address))
                {
                    <p>
                        <strong>Адреса:</strong> @Model.Address
                    </p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p>
                        <strong>Опис:</strong> @Model.Description
                    </p>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <br />
                <strong> Дата видачi __________________________ Дата виконання ___________________________</strong>
            </div>
            <div class="col-sm-12">
                <br />
                <strong> Видав: М. Смушак ____________________</strong>
            </div>
            <div class="col-sm-12">
                <br />
                <strong>  Відмітка про виконання ________________________________________</strong>
            </div>
        </div>
    </div>
    <script type="text/javascript">
<!--
window.print();
//-->
    </script>
</body>
</html>
