@model string
@{
    ViewBag.Title = "Додати перевізників";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    <script type="text/javascript" src="/Scripts/admin/city-edit.js"></script>
}
<h2>@ViewBag.Title</h2>
<p></p>
@using (Html.BeginForm("EditBatch", "Route", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="form-group @Html.HasErrorClass("Data", "has-error")">
            <label class="col-sm-3 control-label" for="Data">
                Дані
            </label>
            <div class="col-sm-5">
                @Html.TextArea("Data", Model)
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("Data")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Зберегти
            </button>
            @Html.ActionLink("Назад", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
<p></p>