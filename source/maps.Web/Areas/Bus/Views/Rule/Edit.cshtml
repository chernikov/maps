@model RuleView
@{
    ViewBag.Title = Model.ID == 0 ? "Додати правило" : "Змінити дані про правило";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
}
<h2>@ViewBag.Title</h2>
<p></p>
@using (Html.BeginForm("Edit", "Rule", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.Hidden("ID", Model.ID)
        <div class="form-group @Html.HasErrorClass("FundamentalRuleID", "has-error")">
            <label class="col-sm-3 control-label" for="FundamentalRuleID">
                Основне правило
            </label>
            <div class="col-sm-5">
                @Html.DropDownList("FundamentalRuleID", Model.SelectListFundamentalRule, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("FundamentalRuleID")
            </div>
        </div>
        <div class="form-group @Html.HasErrorClass("ТуреOfRule", "has-error")">
            <label class="col-sm-3 control-label" for="ТуреOfRule">
                Тип
            </label>
            <div class="col-sm-5">
                @Html.DropDownList("ТуреOfRule", Model.SelectListTypes, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("ТуреOfRule")
            </div>
        </div>
        <div class="form-group @Html.HasErrorClass("Name", "has-error")">
            <label class="col-sm-3 control-label" for="Name">
                Назва
            </label>
            <div class="col-sm-5">
                @Html.TextBox("Name", Model.Name, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("Name")
            </div>
        </div>
        <div class="form-group @Html.HasErrorClass("IsRouteScope", "has-error")">
            <label class="col-sm-8 control-label" for="Type">
                @Html.CheckBox("IsRouteScope", Model.IsRouteScope) Порушення відноситься до маршруту
            </label>
        </div>
        <div class="form-group @Html.HasErrorClass("Description", "has-error")">
            <label class="col-sm-3 control-label" for="Description">
                Опис
            </label>
            <div class="col-sm-5">
                @Html.TextArea("Description", Model.Description, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("Description")
            </div>
        </div>
        <div class="form-group @Html.HasErrorClass("UrlToLaw", "has-error")">
            <label class="col-sm-3 control-label" for="UrlToLaw">
                Посилання на закон
            </label>
            <div class="col-sm-5">
                @Html.TextBox("UrlToLaw", Model.UrlToLaw, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessage("UrlToLaw")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Зберегти
            </button>
            @Html.ActionLink("Назад", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
<p></p>